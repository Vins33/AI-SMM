# .env.example
# Financial Agent Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=financial-agent
APP_VERSION=2.1.0
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_JSON_FORMAT=false  # true for K8s/production, false for local dev

# =============================================================================
# DATABASE (PostgreSQL + AsyncPG)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/financial_db
CHECKPOINT_PG_DSN=postgresql://user:password@localhost:5432/financial_db

# Pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# LLM (Ollama)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL_NAME=gpt-oss:20b
LLM_TEMPERATURE=0.1
LLM_KEEP_ALIVE=4h
LLM_NUM_CTX=16384
LLM_SEED=42
LLM_TIMEOUT=120

# =============================================================================
# VECTOR STORE (Qdrant)
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_TIMEOUT=30
EMBEDDING_MODEL_NAME=nomic-embed-text

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
SERPAPI_API_KEY=your-serpapi-key-here

# =============================================================================
# HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# ADMIN USER CREDENTIALS
# =============================================================================
SYSADMIN_USERNAME=
SYSADMIN_EMAIL=
SYSADMIN_PASSWORD=